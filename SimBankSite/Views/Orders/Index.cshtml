@model IEnumerable<SimBankSite.Models.Order>

@{
    ViewBag.Title = "Заказы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    @using (Ajax.BeginForm("OrdersPartial", new AjaxOptions { UpdateTargetId = "results" }))
    {
        <div class="input-group col-md-5">
            <input id="search" type="text" class="form-control" name="search" placeholder="Введите запрос для поиска...">
            <span class="input-group-btn">
                <input type="submit" class="btn btn-default" value="Поиск"/>
            </span>
        </div>
    }
    <div id="results">

    </div>
</div>


@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
<script type="text/javascript">
    $(document).ready(function () {
        $('#results').load('@Url.Action("OrdersPartial","Orders")?search=')
        $('#search').on('input', function (e) {
            var search = $('#search').val();
            //search = encodeURIComponent(search);
            $('#results').load('@Url.Action("OrdersPartial","Orders")?search=' + search)
        })
    })
</script>

